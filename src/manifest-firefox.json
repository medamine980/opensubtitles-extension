{
  "name": "OpenSubtitles",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Load subtitle to a HTML5 video.",
  "author": "Stefan Breitenstein",
  "icons": {
    "16": "res/icons/logo16.png",
    "48": "res/icons/logo48.png",
    "128": "res/icons/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "res/icons/logo16.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.plus-sub.com/*",
    "https://gqldev.plus-sub.com/*",
    "https://*.opensubtitles.org/**/*",
    "https://*.opensubtitles.com/**/*",
    "webRequest"
  ]
}