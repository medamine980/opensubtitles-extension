{
  "name": "@plussub/open-subtitles-extension",
  "version": "6.2.26",
  "description": "Browser extension which adds subtitle to html5 videos",
  "author": "Stefan Breitenstein",
  "type": "module",
  "exports": {
    "./dist-chrome": "./dist-chrome",
    "./dist-firefox": "./dist-firefox",
    "./src/*": "./src/*"
  },
  "files": [
    "dist-chrome",
    "dist-firefox",
    "src"
  ],
  "scripts": {
    "eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "tscheck": "tsc --noEmit",
    "gen": "apollo client:codegen --endpoint=https://gqlos.plus-sub.com/ --passthroughCustomScalars --target=typescript __gen_gql --includes=./**/*.gql",
    "start:chrome": "webpack --env browser=chrome --watch",
    "build:chrome": "webpack --env browser=chrome --env mode=production",
    "start:firefox": "webpack --env browser=firefox --watch",
    "build:firefox": "webpack --env browser=firefox --env mode=production",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "test": "jest --no-cache",
    "prepublishOnly": "npm run build:all",
    "postinstall": "rm -r node_modules/apollo-language-server/node_modules/graphql || true"
  },
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@plussub/srt-vtt-parser": "^1.1.0",
    "apollo": "^2.32.1",
    "ass-compiler": "^0.1.1",
    "chardet": "^1.3.0",
    "chart.js": "^2.9.4",
    "jszip": "^3.5.0",
    "luxon": "^1.25.0",
    "postcss-nested": "^5.0.5",
    "rxjs": "^7.1.0",
    "typeface-roboto": "^1.1.13",
    "typeface-rubik": "^1.1.13",
    "uuid": "^8.3.0",
    "vue": "^3.2.37"
  },
  "engine": "node >= 0.10",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@tailwindcss/forms": "^0.3.3",
    "@types/chart.js": "^2.9.29",
    "@types/chrome": "^0.0.159",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vue/compiler-sfc": "^3.0.6",
    "autoprefixer": "^10.1.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^6.4.0",
    "cssnano": "^5.0.14",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-gh-issue": "^0.0.4",
    "eslint-plugin-vue": "^9.1.1",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "jest": "^28.1.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.6.2",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.0.1",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "url-loader": "^4.1.1",
    "vue-eslint-parser": "^9.0.2",
    "vue-loader": "^17.0.0",
    "web-ext": "^6.1.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200,
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}
